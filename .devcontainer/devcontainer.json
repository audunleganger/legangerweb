{
    "name": "Alpine Dev",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "forwardPorts": [8080, 8443, 3000, 5000],
    // "runArgs": ["--publish=80:80", "--publish=443:443"],
    "remoteUser": "root",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint",
                "GitHub.copilot-chat",
                "shanoor.vscode-nginx"
            ]
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder}/.devcontainer/nginx,target=/etc/nginx/http.d,type=bind"
    ]
}
