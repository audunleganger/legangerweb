    "contents": [
        [
            {
                "type": "lyric",
                "text": "Goddag, jeg er Tor, jeg er LO-formann"
            },
            {
                "type": "lyric",
                "text": "og kalles de lavtløntes trell."
            },
            {
                "type": "lyric",
                "text": "Får i gang streik så godt jeg kan"
            },
            {
                "type": "lyric",
                "text": "for ikke å bli arbeidsløs selv."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "De harde åttiåra  - det blir tider det."
            },
            {
                "type": "lyric",
                "text": "Med større ledighet er LO sikra suksess."
            },
            {
                "type": "lyric",
                "text": "Heng med i prisgaloppen – LO’s dobbeltspill."
            },
            {
                "type": "lyric",
                "text": "Skal vi på kostnadstoppen må bruttolønnsøkning til."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Så mangt bør bli endret i denne verden"
            },
            {
                "type": "lyric",
                "text": "og LO har fått dette kall."
            },
            {
                "type": "lyric",
                "text": "Nato bør styres av NNN"
            },
            {
                "type": "lyric",
                "text": "og FN av Jern og Metall."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "I de harde åttiåra blir nok Kraby paff."
            },
            {
                "type": "lyric",
                "text": "Vi krever atomfri sone i hovedavtalen med NAF."
            },
            {
                "type": "lyric",
                "text": "Vi vet hvordan vi hindrer krig og massedrap:"
            },
            {
                "type": "lyric",
                "text": "Går inn i PLO i kollektivt medlemskap."
            }
        ],
        [
            {
                "type": "italic underline",
                "text": "(Tale:)"
            },
            {
                "type": "italic",
                "text": "Kjære medproletarer: Nå må vi ruste oss"
            },
            {
                "type": "italic",
                "text": "til kamp mot Høyre-regjeringa som gjør"
            },
            {
                "type": "italic",
                "text": "livet surt for oss LO-organiserte arbeidere!"
            },
            {
                "type": "italic",
                "text": "Vi må ikke finne oss i at arbeiderpressa"
            },
            {
                "type": "italic",
                "text": "får mindre støtte, at AOF’s hobbykurs stanses,"
            },
            {
                "type": "italic",
                "text": "eller at Landsbanken får mindre utlånsrammer!"
            },
            {
                "type": "italic",
                "text": "Vi må stanse dette egoistiske Høyre!"
            },
            {
                "type": "italic",
                "text": "Det som mangler er solidaritet –"
            },
            {
                "type": "italic",
                "text": "og Arbeiderpartiet!"
            }
        ],
        [
            {
                "type": "lyric",
                "text": "I de harde åttiåra er vi klar til kamp."
            },
            {
                "type": "lyric",
                "text": "Vi kjemper side-by-side, arbeider og LO-pamp."
            },
            {
                "type": "lyric",
                "text": "Vi slår ut Willoch-gjengen og får arbeidsro."
            },
            {
                "type": "lyric",
                "text": "Vi samarbeider bare med DNA og Gro."
            },
            {
                "type": "lyric",
                "text": "Slik vil det alltid bli – AP til evig tid."
            }
        ]
    ]
}
