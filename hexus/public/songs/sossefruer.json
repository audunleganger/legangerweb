    "contents": [
        [
            {
                "type": "lyric",
                "text": "Vi er to små fine fruer, vi"
            },
            {
                "type": "lyric",
                "text": "som har mer enn nok av ledig tid."
            },
            {
                "type": "lyric",
                "text": "Hele formiddagen er vi fri"
            },
            {
                "type": "lyric",
                "text": "og da møtes vi på Halvorsens Konditori."
            },
            {
                "type": "lyric",
                "text": "Drikker kaffen vår,  spiser smul-te-ring"
            },
            {
                "type": "lyric",
                "text": "konverserer om små ting..."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Og så går vi rundt og handler litt"
            },
            {
                "type": "lyric",
                "text": "Alle kjøpmenn gir oss god kreditt."
            },
            {
                "type": "lyric",
                "text": "«Bare før det opp på mannen min»"
            },
            {
                "type": "lyric",
                "text": "sier vi, og sanker varene i kurven inn:"
            },
            {
                "type": "lyric",
                "text": "italiensk salat, ekte majones,"
            },
            {
                "type": "lyric",
                "text": "remulade og bearnaise..."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Etter middag hviler mannen min"
            },
            {
                "type": "lyric",
                "text": "og da skreller jeg en mandarin,"
            },
            {
                "type": "lyric",
                "text": "mens jeg venter på at klokken slår"
            },
            {
                "type": "lyric",
                "text": "og vi Dagsrevy med kjekke, mørke Austbø får."
            },
            {
                "type": "lyric",
                "text": "Vi tar kaffen vår, spiser smul-te-ring"
            },
            {
                "type": "lyric",
                "text": "konverserer om små ting..."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Det er have rundt om villaen"
            },
            {
                "type": "lyric",
                "text": "som har verdens mest barberte plen"
            },
            {
                "type": "lyric",
                "text": "for den klipper jeg med neglesaks –"
            }
        ],
        [
            {
                "type": "lyric",
                "text": "hvis det stikker opp et ugress, "
            },
            {
                "type": "lyric",
                "text": "blir det kverket straks!"
            },
            {
                "type": "lyric",
                "text": "Her er allting pent, her er allting rent"
            },
            {
                "type": "lyric",
                "text": "kontrollert og pent brodert!"
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Og rundt haven vokser hekken opp"
            },
            {
                "type": "lyric",
                "text": "Den har verdens største hekketopp"
            },
            {
                "type": "lyric",
                "text": "Hvis vi kikker ut og ser no’ stygt,"
            },
            {
                "type": "lyric",
                "text": "ja, da skynder vi oss inn igjen hvor alt er trygt."
            },
            {
                "type": "lyric",
                "text": "Vi tar kaffen vår, spiser smul-te-ring"
            },
            {
                "type": "lyric",
                "text": "konverserer om små ting..."
            }
        ]
    ]
}
