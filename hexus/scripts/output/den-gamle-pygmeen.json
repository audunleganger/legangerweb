    "contents": [
        [
            {
                "type": "lyric",
                "text": "I hine hårde, forgangne dager"
            },
            {
                "type": "lyric",
                "text": "dengang pygméen var kun pygmé –"
            },
            {
                "type": "lyric",
                "text": "konstant et offer for alskens plager,"
            },
            {
                "type": "lyric",
                "text": "da hadde Blindern et renommé."
            },
            {
                "type": "lyric",
                "text": "Dengang da Bruket var for de store"
            },
            {
                "type": "lyric",
                "text": "som knapt nok tålte å se de små"
            },
            {
                "type": "lyric",
                "text": "som telefonvakter på kontoret –"
            },
            {
                "type": "lyric",
                "text": "ja, det var tider i vårt château!"
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Man spurte aldri om hva vi ville."
            },
            {
                "type": "lyric",
                "text": "Vi eksisterte, og det var nok."
            },
            {
                "type": "lyric",
                "text": "Vi visste også at Boccia-spillet"
            },
            {
                "type": "lyric",
                "text": "var for den eldre studenter-flokk."
            },
            {
                "type": "lyric",
                "text": "Og maten fikk vi av snille piker,"
            },
            {
                "type": "lyric",
                "text": "diskret servert i en bortgjemt krok."
            },
            {
                "type": "lyric",
                "text": "De eldre gav oss kun ørefiker –"
            },
            {
                "type": "lyric",
                "text": "til jul kanhende en bildebok."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Ja, blod og svette og salte tårer"
            },
            {
                "type": "lyric",
                "text": "var alt vi hadde på denne jord."
            },
            {
                "type": "lyric",
                "text": "Vi angret ofte, vi arme dårer"
            },
            {
                "type": "lyric",
                "text": "på at vi reiste fra far og mor."
            },
            {
                "type": "lyric",
                "text": "Den kutte-kledde, brutale skare"
            },
            {
                "type": "lyric",
                "text": "som gav oss is-dusjer uavbrudt –"
            }
        ],
        [
            {
                "type": "lyric",
                "text": "den var en redselsfull natte-mare"
            },
            {
                "type": "lyric",
                "text": "for hver en junior-Blinderngutt."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Vi hentet selters, vi gikk på Polet,"
            },
            {
                "type": "lyric",
                "text": "for plikten kallet oss dag og natt."
            },
            {
                "type": "lyric",
                "text": "Vi var elever på Præci skole"
            },
            {
                "type": "lyric",
                "text": "som tiet ydmykt i all debatt."
            },
            {
                "type": "lyric",
                "text": "Hvem turde mukke når denne Mester"
            },
            {
                "type": "lyric",
                "text": "gav oss i oppdrag å pusse sko?"
            },
            {
                "type": "lyric",
                "text": "Og aldri ventet han seg protester."
            },
            {
                "type": "lyric",
                "text": "Vi var pygméer – vi måtte jo!"
            }
        ]
    ]
}