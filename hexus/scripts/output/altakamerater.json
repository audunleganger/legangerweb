    "contents": [
        [
            {
                "type": "lyric",
                "text": "Politi:"
            },
            {
                "type": "lyric",
                "text": "Kom, bli med Alta-kameratene"
            },
            {
                "type": "lyric",
                "text": "vi skal vise Norge hvem som har størst makt."
            },
            {
                "type": "lyric",
                "text": "Vi skal få fjernet demonstrantene"
            },
            {
                "type": "lyric",
                "text": "vekk fra Stilla med tilbørlig pomp og prakt."
            },
            {
                "type": "lyric",
                "text": "For de er farlige forbrytere."
            },
            {
                "type": "lyric",
                "text": "Det har onkel  -  ja, De vet  -  Andreas, sagt."
            },
            {
                "type": "lyric",
                "text": "De  -  vil jo bare klandre"
            },
            {
                "type": "lyric",
                "text": "og  -  da må noen handle."
            },
            {
                "type": "lyric",
                "text": "Og da bør man selvsagt gjøre det med makt."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Demonstranter:"
            },
            {
                "type": "lyric",
                "text": "Vi vil ikke flytte oss"
            },
            {
                "type": "lyric",
                "text": "Vi sitter her i våre lenker til vi dør."
            },
            {
                "type": "lyric",
                "text": "De vil ta hver elv og foss"
            },
            {
                "type": "lyric",
                "text": "til hele dette landet vårt er fullt av rør."
            },
            {
                "type": "lyric",
                "text": "Derfor er vi med og slåss"
            },
            {
                "type": "lyric",
                "text": "mot hærskipet som Oddvar sendte i fra sør:"
            },
            {
                "type": "lyric",
                "text": "Vi er jo snille, de er helt ville!"
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Politi:"
            },
            {
                "type": "lyric",
                "text": "Og da bør man selvsagt gjøre det med makt!"
            },
            {
                "type": "lyric",
                "text": "(demonstrantene synger “nei” på etterslagene)"
            },
            {
                "type": "lyric",
                "text": "For nå vil vi ikke ha no’ mere vas."
            },
            {
                "type": "lyric",
                "text": "Vi er lei av samer og studenters mas."
            },
            {
                "type": "lyric",
                "text": "Folk er blitt lei,"
            },
            {
                "type": "lyric",
                "text": "vil ha ny vei."
            },
            {
                "type": "lyric",
                "text": "Så nå kommer vi og tar dere, og da..."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Demonstranter:"
            },
            {
                "type": "lyric",
                "text": "NEI, dere får, dere får, dere får "
            },
            {
                "type": "lyric",
                "text": "dere får nå ikke ta vår elv."
            },
            {
                "type": "lyric",
                "text": "Dere kan, dere kan, dere kan"
            },
            {
                "type": "lyric",
                "text": "dere kan jo bære oss bort selv!"
            },
            {
                "type": "lyric",
                "text": "For vi ønsker jo at "
            },
            {
                "type": "lyric",
                "text": "elva skal, elva skal, elva skal, "
            },
            {
                "type": "lyric",
                "text": "elva skal få leve i evig tid."
            },
            {
                "type": "lyric",
                "text": "Det er vi som er Alta-kameratene,"
            },
            {
                "type": "lyric",
                "text": "Og derfor blir vi her, vi !"
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Politi sammen med demonstranter:"
            },
            {
                "type": "lyric",
                "text": "P:  Kan De ikke være snill..."
            },
            {
                "type": "lyric",
                "text": "D:  De får ikke bygge ut "
            },
            {
                "type": "lyric",
                "text": "P:  Vi har fått lov til å ta en elv til."
            },
            {
                "type": "lyric",
                "text": "D:  Vi vil heller sulte ut."
            },
            {
                "type": "lyric",
                "text": "P:  Kan De ikke være grei…"
