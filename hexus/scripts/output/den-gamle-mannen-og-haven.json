    "contents": [
        [
            {
                "type": "lyric",
                "text": "Når dagen gryr, og morgensolen smiler"
            },
            {
                "type": "lyric",
                "text": "til trær og dyr på Blindernbakkens topp,"
            },
            {
                "type": "lyric",
                "text": "når små studenter under dynen hviler,"
            },
            {
                "type": "lyric",
                "text": "da by’ner slitet for en gammel kropp."
            },
            {
                "type": "lyric",
                "text": "I park og blomsterbed med greip og spade,"
            },
            {
                "type": "lyric",
                "text": "med baktung ryggsekk gjennom Blindernvei –"
            },
            {
                "type": "lyric",
                "text": "jeg bærer brev og kort og Morgenbladet –"
            },
            {
                "type": "lyric",
                "text": "og ingen bærer det så tungt som jeg."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Og når jeg gjennomvåt har gått og tråkka"
            },
            {
                "type": "lyric",
                "text": "i timevis blant tunge pæretrær,"
            },
            {
                "type": "lyric",
                "text": "så vekkes jeg med ett av middagsklokka"
            },
            {
                "type": "lyric",
                "text": "som kaller sammen en vanvittig hær."
            },
            {
                "type": "lyric",
                "text": "Med smil i sjel lar jeg meg sjikanere,"
            },
            {
                "type": "lyric",
                "text": "jeg ville fort bli både sår og hes"
            },
            {
                "type": "lyric",
                "text": "hvis jeg sku’ drive på og presisere"
            },
            {
                "type": "lyric",
                "text": "min spesial-kommando: «Gå og les!»"
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Når festen går, og bukkehornet gjaller"
            },
            {
                "type": "lyric",
                "text": "og Blindern stiller i sin beste puss –"
            },
            {
                "type": "lyric",
                "text": "da skrider jeg igjennom sal og haller"
            },
            {
                "type": "lyric",
                "text": "i sko som skinner som et pikebluss."
            },
            {
                "type": "lyric",
                "text": "Hvem vet beskjed når vorspiel er i gjære?"
            },
            {
                "type": "lyric",
                "text": "Hvem er lokalkjent på den brede vei?"
            },
            {
                "type": "lyric",
                "text": "Hvor Bacchus bor, er gudagott å være –"
            }
        ],
        [
            {
                "type": "lyric",
                "text": "og ingen værer ham så godt som jeg!"
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Ja – i mitt liv som slave for studenter"
            },
            {
                "type": "lyric",
                "text": "har jeg adskillig visdom hatt igjen."
            },
            {
                "type": "lyric",
                "text": "Jeg har sett de som aldri så på jenter"
            },
            {
                "type": "lyric",
                "text": "bli far til syv og åtte – smått om senn."
            },
            {
                "type": "lyric",
                "text": "Det er blitt mennesker av veterinærer,"
            },
            {
                "type": "lyric",
                "text": "og samfunnsrefsere av fyllesvin,"
            },
            {
                "type": "lyric",
                "text": "en pæretjuv ble søndagsskolelærer."
            },
            {
                "type": "lyric",
                "text": "Jeg har sett losjeformenn sette vin!"
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Men rarest er det likevel å tenke"
            },
            {
                "type": "lyric",
                "text": "på all den yngel som til slutt ble stor."
            },
            {
                "type": "lyric",
                "text": "Hvem ventet vel at nåden skulle skjenke"
            },
            {
                "type": "lyric",
                "text": "et doktorat til Jansen junior?"
            },
            {
                "type": "lyric",
                "text": "Jeg har gitt pengelån til millionærer –"
            },
            {
                "type": "lyric",
                "text": "jeg har sett Lindebrække drikke vann."
            },
            {
                "type": "lyric",
                "text": "Jeg har sett hedninger bli misjonærer."
            },
            {
                "type": "lyric",
                "text": "Og Ole Bergersen bli – stortingsmann!"
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Visa er lagt i munnen på vaktmester Just Johannesen,ansatt på "
            },
            {
                "type": "lyric",
                "text": "Bruket 1925-62. Halv Bukk 1938, Hel bukk 1952."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Jan F. Jansen (Jan den andre), sønn av husfar Jan B.Jansen."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Sjur Lindebrække (1909-98) stortingsmann 1945-53, formann i Høyre "
            },
            {
                "type": "lyric",
                "text": "1962-70."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Ole Bergesen(1916-65), revysjef 1938 og 1939, stortingsmann(H) "
            }
        ],
        [
            {
                "type": "lyric",
                "text": "1954-65."
            }
        ]
    ]
}