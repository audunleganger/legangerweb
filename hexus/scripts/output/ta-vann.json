    "contents": [
        [
            {
                "type": "lyric",
                "text": "Velkommen til aftenens møde."
            },
            {
                "type": "lyric",
                "text": "Vær hilset fra by og fra land."
            },
            {
                "type": "lyric",
                "text": "Vi klarer oss uden ei bløide,  "
            },
            {
                "type": "lyric",
                "text": "for her drikker vi bare vann."
            },
            {
                "type": "lyric",
                "text": "Hver lørdag fåes kaffe med fløde, "
            },
            {
                "type": "lyric",
                "text": "med sukker til annenhver mann"
            },
            {
                "type": "lyric",
                "text": "og ingen i kretsen vil nøde, "
            },
            {
                "type": "lyric",
                "text": "vi synger vår festlige sang:"
            }
        ],
        [
            {
                "type": "chorus-header",
                "text": "Ref."
            },
            {
                "type": "chorus-lyric",
                "text": "Ta vann, ta vann, ta kildevann!"
            },
            {
                "type": "chorus-lyric",
                "text": "Fyll opp i bøtter og i spann"
            },
            {
                "type": "chorus-lyric",
                "text": "for her fra Kristiansand og helt til Lillesand"
            },
            {
                "type": "chorus-lyric",
                "text": "kom nå alle mann, glem all synd og skam"
            },
            {
                "type": "chorus-lyric",
                "text": "for vi veit at det går an å bli en avholdsmann."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Vi gjør ingen forskjell på folka, "
            },
            {
                "type": "lyric",
                "text": "her er vi kvinne som mann"
            },
            {
                "type": "lyric",
                "text": "For fattig og rik har vi tolka, "
            },
            {
                "type": "lyric",
                "text": "den skriften som vi fikk av Han."
            },
            {
                "type": "lyric",
                "text": "Her einas vi søstre og brødre, "
            },
            {
                "type": "lyric",
                "text": "her frelsas hver syndige mann."
            },
            {
                "type": "lyric",
                "text": "Vi tar imot ugifte mødre "
            },
            {
                "type": "lyric",
                "text": "som har dansa til «Singel og Sand»."
            }
        ],
        [
            {
                "type": "chorus-header",
                "text": "Ref."
            },
            {
                "type": "chorus-lyric",
                "text": "Ta vann, ta vann, ta kildevann!"
