    "contents": [
        [
            {
                "type": "lyric",
                "text": "Min rel’gion gir meg fullgod trening"
            },
            {
                "type": "lyric",
                "text": "og alibi for å myrde med."
            },
            {
                "type": "lyric",
                "text": "Enhver person med en annen mening"
            },
            {
                "type": "lyric",
                "text": "kan likvideres på en-to-tre."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Om noen prøver seg med protester,"
            },
            {
                "type": "lyric",
                "text": "da bare henter vi dommer Blod."
            },
            {
                "type": "lyric",
                "text": "Islams justis fra islamske prester"
            },
            {
                "type": "lyric",
                "text": "gir øyeblikkelig fred og ro."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Den veike statssjefen i Uganda"
            },
            {
                "type": "lyric",
                "text": "var altfor pysete som demon."
            },
            {
                "type": "lyric",
                "text": "All verdens terror og propaganda"
            },
            {
                "type": "lyric",
                "text": "er bare blåbær mot rel’gion."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Og hva med Hitler og Josef Stalin,"
            },
            {
                "type": "lyric",
                "text": "Ja, hvem av dem klart’ å kverke flest?"
            },
            {
                "type": "lyric",
                "text": "Men om en sinnsyk skal gi befaling,"
            },
            {
                "type": "lyric",
                "text": "da bør han utgi seg selv for prest."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Jim Jones var leder for Folkets Tempel,"
            },
            {
                "type": "lyric",
                "text": "ba menigheten å drikke gift."
            },
            {
                "type": "lyric",
                "text": "Og han kan være et godt eksempel"
            },
            {
                "type": "lyric",
                "text": "på rel’gionens enorme drift."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Den er som opium for hele folket,"
            },
            {
                "type": "lyric",
                "text": "Karl Marx har lært meg det tricket der."
            },
            {
                "type": "lyric",
                "text": "Og se - Koranen - den kan jeg tolke"
            },
            {
                "type": "lyric",
                "text": "for min fanatiske selvmordshær."
            }
        ],
        [
            {
                "type": "lyric",
                "text": "Jeg er Khomeiny, en Ayatollah, "
            },
            {
                "type": "lyric",
                "text": "og jeg er statsleder i Iran. "
            },
            {
                "type": "lyric",
                "text": "Og når jeg dør, så vil jeg få rolla"
            },
            {
                "type": "lyric",
                "text": "som fremste sjefs-jævel, ja for faen!"
            }
        ],
        [
            {
                "type": "lyric",
                "text": "I åtti år har jeg vært i trening"
            },
            {
                "type": "lyric",
                "text": "og har gjort helvete svært så hett"
            },
            {
                "type": "lyric",
                "text": "for hver en vantro og skitten hedning, "
            },
            {
                "type": "lyric",
                "text": "nå skal de stekes i eget fett."
            }
        ]
    ]
}